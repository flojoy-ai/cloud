{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["bun-types"],
    "noEmit": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  }
}
